#include <iostream>
#include <iomanip>

using std::cout;
using std::end;
using std::string;

double calculateAverage(int sum, int size)
{
sum = 0;
size = 1;
}

int main()
{
const int SIZE = 10;
int ary[SIZE] = {75, 88, 62, 95, 50, 82, 70, 91, 45, 78};

int sum = 0;
for (int i = 0; i < SIZE; i++)
sum += ary[i];

cout << "Before function call -> sum: " << sum << ", size: " << SIZE << endl;

double avg = calculateAverage(sum, SIZE);

cout << "Return the average: " << avg << endl;

cout << "After function call -> sum: " << sum << ", size: " << SIZE << endl;

return 0;
